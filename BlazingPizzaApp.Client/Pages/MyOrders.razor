@page "/myorders"
@using BlazingPizzaApp.Shared
@inject HttpClient HttpClient

<h2>My Orders</h2>

@if (orders == null)
{
    <p>Loading...</p>
}
else
{
    <ul>
    @foreach (var order in orders)
    {
        <li>Order #@order.Order.OrderId - Status: @order.StatusText</li>
    }
    </ul>
}

@code {
    private List<OrderWithStatus>? orders;

    protected override async Task OnInitializedAsync()
    {
        orders = await HttpClient.GetFromJsonAsync<List<OrderWithStatus>>("api/orders");
    }
}
